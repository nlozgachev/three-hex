---
import ButtonLink from './ButtonLink.svelte';
let github = 'https://github.com/hemerno/three-hex';
---

<footer class="footer">
  <ButtonLink text={'GitHub'} href={github} />
</footer>

<style lang="scss">
  .footer {
    display: grid;
    place-items: center;
    padding: 1.5rem;

    @media screen and (min-width: 768px) {
      padding: 4rem;
    }

    a {
      font-size: 1.2rem;
      font-weight: 550;
      line-height: 1.4;
      letter-spacing: -0.006rem;

      @media screen and (min-width: 768px) {
        font-size: 1.4rem;
      }
    }
  }
</style>
