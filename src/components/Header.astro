---
import Navbar from './Navbar.svelte';

export interface Props {
  description: string;
}

const { description } = Astro.props as Props;
---

<header class="header">
  <Navbar client:load />
  <section class="center">
    <div class="shape-container">
      <div class="shape"></div>
    </div>
    <div class="main-heading">
      <h1>{description}</h1>
    </div>
  </section>
</header>

<style lang="scss">
  .header {
    display: flex;
    flex-flow: column nowrap;
    height: 100vh;
    background: var(--background);
  }
  .main-heading,
  .shape-container {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .main-heading {
    width: 100%;
    text-align: center;
    h1 {
      font-size: 2rem;
      font-weight: 550;
      line-height: 1.4;
      letter-spacing: -0.02rem;

      @media screen and (min-width: 768px) {
        font-size: 3rem;
      }

      @media screen and (min-width: 1200px) {
        font-size: 4rem;
      }
    }
  }
  .shape {
    width: 18rem;
    height: 18rem;
    border-radius: 50%;
    background: radial-gradient(ellipse at top, var(--sphere-1), transparent),
      radial-gradient(ellipse at bottom, var(--sphere-2), transparent);
    @media screen and (min-width: 768px) {
      width: 22rem;
      height: 22rem;
    }
  }
  .center {
    flex: 1;
    user-select: none;
  }
</style>
